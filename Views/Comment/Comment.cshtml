@model object
@{
    Layout = "_Layout";
    ViewData["Title"] = "Comment";
}

<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="~/css/CommentStyle.css"/>
    <script src="~/js/FuncComment.js"></script>
    <title>Comment</title>
</head>
<body>
<div class="Main">
    <h1 class="Title" align="center" >Test You</h1>
    <p class="Text" id="title">Введите ваш комментарий к тесту</p>
    <h4 class="TextField">
        <textarea cols="50" rows="4" id="comment" class="rounded"></textarea>
    </h4>
    <h4 id="like" class="like">
    </h4>
    <h4 class="buttons">
        <input type='button' value='Оставить комментарий' onclick="Comment(@ViewBag.testId)"/>
        <input type='button' value='Назад' onclick="Back()"/>
    </h4>
</div>
</body>
</html>

<script>
Init(@ViewBag.testId)
</script>